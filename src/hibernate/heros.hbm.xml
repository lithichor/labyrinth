<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="com.models">
	<class name="Hero" table="heros">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="gameId" type="java.lang.Integer" column="game_id"/>
		<property name="createdAt" type="java.util.Date" column="created_at"/>
		<property name="updatedAt" type="java.util.Date" column="updated_at"/>
		<property name="deletedAt" type="java.util.Date" column="deleted_at"/>
	</class>
</hibernate-mapping>